<% sentence.children.each do |child| %>
<div class="child">
<p><%= child.id %>, <%= child.depth %>, <%= child.position %> - <%= child.content %><br></p><br><br>

<% unless child.children.empty? %>
  <%= render partial: 'stories/children', locals: { sentence: child } %>
<% end %>
</div>
<% end %>



