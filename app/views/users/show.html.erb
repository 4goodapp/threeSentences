<% if user_signed_in? %>
<h1><%= @user.username %>'s Profile Page</h1>
  <h2>My Stories</h2>
  <p><%= current_user.username %>
  <ol>
    <% @user.stories.each do |story| %>
      <li><%= link_to story.name, story %>, <%= link_to "Delete Story", story_path(story), method: :delete, data: {confirm: "Are you sure you want to logout?"} %></li>
    <% end %>
  </ol>

<p><%= link_to 'Create new story', new_story_path %></p>
<% else %>
<p>you must log in to view this page</p>
<% end %>
